<Window x:Class="Clicker.Keys.KeyStrokeLoader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select file" Height="141" Width="405" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStyle="ToolWindow" Loaded="Window_Loaded">
	<Grid>
		<Label x:Name="lblInfo" Content="" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="377" Foreground="#FFFD8585"/>
		<TextBox x:Name="txtPath" HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="377"/>
		<Button x:Name="btnAction" Content="Load Save" HorizontalAlignment="Left" Margin="232,79,0,0" VerticalAlignment="Top" Width="75" Click="btnAction_Click"/>
		<Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="312,79,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.08,-0.318" Click="btnCancel_Click"/>
		<Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Left" Margin="152,79,0,0" VerticalAlignment="Top" Width="75" Click="btnBrowse_Click" Visibility="Hidden"/>
		<ComboBox x:Name="cmbName" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="377"/>

	</Grid>
</Window>
